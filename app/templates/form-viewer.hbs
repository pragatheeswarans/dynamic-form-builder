<div class="container-fluid app-base">
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8">
      <div class="row" style="margin:20px 10px;">
        <div class="col-sm-12">
          <button class="btn btn-default" type="submit" {{action 'goBack'}}> Go Back </button>
          {{#if canShowFormSubmit}}
            <button class="btn btn-default" type="submit" {{action 'submitForm'}}> Submit Form </button>
          {{/if}}
        </div>
      </div>
      <div class="form-base row">
        <div class="row form-group">
          <div class="col-sm-12" style="text-align: center;"> {{model.title}} </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-12 dragSortable">
            {{#each model as |formObject|}}
              {{form-elements content=formObject isLiveForm=true tagName="div"}}
            {{else}}
              <h4 style="text-align:center"> Looks like you haven't Built the Form yet. Go back and build a form. </h4>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
